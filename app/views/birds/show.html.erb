<!-- Page Content -->
<link rel="stylesheet" href="https://use.typekit.net/bxx3rsq.css">
<div class="container">

<!-- Portfolio Item Heading -->
  <h1 class="my-4" style="font-family: p22-franklin-caslon, sans-serif;"><%= @bird.title %>
  </h1>

  <!-- Portfolio Item Row -->
  <div class="row">

    <div class="col-md-8">
      
    <img class="img-fluid" <%= image_tag("small_bird.jpg", :alt => "bird photo") %> >

    </div>

    <div class="col-md-4">
      <h3 class="my-3"><%= @bird.title %> notes</h3>
      <p><%= @bird.content %></p>

      <h3 class="my-3">Categories:</h3>
      <ul style="list-style-type: none; padding: 0; margin: 0;">
		  <% @bird.categories.each do |category| %>
		    <li><%= category.name %></li>
		  <% end %>
	  </ul>

	  <h3 class="my-3">Author:</h3>
		<p><% a = @bird.user.email %></p>
		<p><%= a %> </p>

  </div>
  <!-- /.row  nav source: https://getbootstrap.com/docs/4.0/components/navbar/ -->

<nav class="navbar navbar-expand-lg navbar-light" style="background-color: #FFCC33;">


  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>

  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      
      <li class="nav-item">
          <a class="nav-link" href="/birds">sightings</a>
      </li>

      <li class="nav-item">
          <a class="nav-link" href="/birds/<%= @bird.id %>/edit">edit</a>
      </li>

      <li class="nav-item">
          <a class="nav-link" href="/birds/<%= @bird.id %>" data-method="delete">delete</a>
      </li>

    </ul>
  </div>
</nav>

</div>
<!-- /.container -->
